load("//tools:make_executable.bzl", "make_executable")

# Make the script executable
make_executable(
    name = "update_executable",
    src = "update.sh",  # The path to your shell script
)

# `sh_binary` now depends on the executable generated by `make_executable`
sh_binary(
    name = "update",
    srcs = [":update_executable"],  # Use the output of the `make_executable` rule
    visibility = ["//visibility:public"],
)
